<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2db92d">


    <Button
        android:id="@+id/login_btn"
        android:layout_width="315dp"
        android:layout_height="58dp"
        android:background="#E3B0E1B3"
        android:text="@string/로그인"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="497dp" />

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:backgroundTint="#E3B0E1B3"
        android:text="@string/회원가입"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="578dp" />

    <Button
        android:id="@+id/find_btn"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:backgroundTint="#E3B0E1B3"
        android:text="@string/비밀번호찾기"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="578dp" />

    <EditText
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/아이디"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="314dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/비밀번호"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="370dp"
        android:autofillHints="" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Greening"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="175dp" />

</androidx.constraintlayout.widget.ConstraintLayout>